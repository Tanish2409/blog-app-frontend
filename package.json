{
	"name": "multi-user-blog-app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --max-warnings 0",
		"format": "prettier --write src/**/*"
	},
	"dependencies": {
		"next": "11.0.1",
		"react": "17.0.2",
		"react-dom": "17.0.2"
	},
	"devDependencies": {
		"@types/node": "^16.0.0",
		"@types/react": "^17.0.13",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"autoprefixer": "^10.2.6",
		"eslint": "7.30.0",
		"eslint-config-next": "11.0.1",
		"eslint-config-prettier": "^8.3.0",
		"husky": "^7.0.0",
		"lint-staged": "^11.0.0",
		"postcss": "^8.3.5",
		"prettier": "^2.3.2",
		"tailwindcss": "^2.2.4",
		"typescript": "^4.3.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*": [
			"yarn format"
		],
		"src/**/*.{jsx,js,ts,tsx}": [
			"yarn lint-staged"
		]
	}
}
